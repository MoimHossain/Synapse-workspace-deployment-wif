{
  "manifestVersion": 1,
  "id": "mh-synapse-workspace-deployment",
  "name": "Synapse Workspace Deployment with WIF",
  "description": "Azure Pipeline task for deploying Synapse Workspace using Workload Identity Federation",
  "version": "0.0.2",
  "publisher": "MoimHossain",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "scopes": [
    "vso.variablegroups_read",
    "vso.code",
    "vso.build",
    "vso.release",
    "vso.serviceendpoint_query"
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "icons": {
    "default": "images/icon.png"
  },
  "files": [
    {
      "path": "synapse-deploy"
    },
    {
      "path": "toggle-trigger"
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "mh-synapse-deploy",
      "type": "ms.vss-distributed-task.task",
      "description": "Deployment task for synapse workspace.",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "synapse-deploy"
      }
    },
    {
      "id": "mh-toggle-trigger",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "toggle-trigger"
      }
    }
  ]
}